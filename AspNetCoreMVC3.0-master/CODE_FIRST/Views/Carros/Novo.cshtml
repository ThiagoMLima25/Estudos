@model CODE_FIRST.Models.Car
@{
    ViewData["Title"] = "Novo";
}

<h2>Inserir novo carro</h2>

<form asp-action="Novo" method="post">
    <div class="form-group">
        <label asp-for="Brand" class="control-label"></label>
        <input asp-for="Brand" cite="" class="form-control" />
        @if (ViewData.ModelState.Any(error => error.Value.Errors.Any()))
        {
            @Html.ValidationMessageFor(errorMessage => errorMessage.Brand, "", new { @class = "text-danger" })
        }
    </div>

    <div class="form-group">
        <label asp-for="CarName" class="control-label"></label>
        <input asp-for="CarName" class="form-control" />
    </div>

    <div class="form-group">
        @Html.LabelFor(value => value.Year)
        @Html.TextBoxFor(value => value.Year, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success" />
        <a asp-controller="Carros" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>