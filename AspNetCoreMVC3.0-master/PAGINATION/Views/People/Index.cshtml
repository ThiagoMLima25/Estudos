@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<PAGINATION.Models.People>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Old)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Old)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PeopleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PeopleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PeopleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))