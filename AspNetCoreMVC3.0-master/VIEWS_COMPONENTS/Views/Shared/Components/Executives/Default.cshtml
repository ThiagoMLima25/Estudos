@model IEnumerable<VIEWS_COMPONENTS.Models.Cars>

<div class="jumbotron" style="padding: 2rem 2rem">
    <p><strong>Executives - Total: @Model.Count()</strong></p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CarModel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarYear)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarYear)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CarsId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CarsId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CarsId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>